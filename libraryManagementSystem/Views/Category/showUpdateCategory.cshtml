
@model libraryManagementSystem.Models.Entity.category

@{
    ViewBag.Title = "showUpdateCategory";
    Layout = "~/Views/Shared/Layout_1.cshtml";
}

@using (Html.BeginForm("updateCategory", "Category", FormMethod.Post))//action name, controller name, form method type. Note that '@' tag helps us to use html helper commands
{
   <div style="margin-bottom:15px"></div>
   <div class="form-group">
       @*@Html.LabelFor(cat => cat.category_id)*@
       <label>ID</label>
       @Html.TextBoxFor(c => c.category_id, new { @class = "form-control", @readonly = "readonly" })
       <br />
       <label>Category Name</label>
       @*@Html.LabelFor(cat => cat.category_name)*@
       @Html.TextBoxFor(c => c.category_name, new { @class = "form-control", autocomplete="off"})
       @Html.ValidationMessageFor(c => c.category_name, "", new { @style = "color:red" })
   </div>
   <div>
       <button class="btn btn-warning">Update</button>
   </div>
}

