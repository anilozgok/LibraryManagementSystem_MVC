
@model libraryManagementSystem.Models.Entity.author

@{
    ViewBag.Title = "showUpdateAuthor";
    Layout = "~/Views/Shared/Layout_1.cshtml";
}

@using (Html.BeginForm("updateAuthor", "Author", FormMethod.Post))//action name, controller name, form method type. Note that '@' tag helps us to use html helper commands
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @*@Html.LabelFor(aut => aut.author_id)*@
        <label>ID</label>
        @Html.TextBoxFor(a => a.author_id, new { @class = "form-control", autocomplete = "off", @readonly = "readonly" })
        <br />
        <label>Authoe Name</label>
        @*@Html.LabelFor(aut => aut.author_name)*@
        @Html.TextBoxFor(a => a.author_name, new { @class = "form-control", autocomplete = "off" })
        @Html.ValidationMessageFor(a => a.author_name, "", new { @style = "color:red" })
        <br />
        <label>Author Surname</label>
        @Html.TextBoxFor(a => a.author_surname, new { @class = "form-control", autocomplete = "off" })
        @Html.ValidationMessageFor(a => a.author_surname, "", new { @style = "color:red" })
    </div>
    <div>
        <button class="btn btn-warning">Update</button>
    </div>
}

