
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout_1.cshtml";
}

<h2 style="margin-top: 10px; margin-left: 20px">Widgets</h2>


<!DOCTYPE html>
<html lang="zxx">

    <head>
        <!-- custom-theme -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        
        <script type="application/x-javascript">
            addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
                   function hideURLbar(){ window.scrollTo(0,1); } </script>
        <!-- //custom-theme -->
        <link href="~/web3/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
        <link href="~/web3/css/component.css" rel="stylesheet" type="text/css" media="all" />
        <link href="~/web3/css/export.css" rel="stylesheet" type="text/css" media="all" />
        <link href="~/web3/css/style_grid.css" rel="stylesheet" type="text/css" media="all" />
        <link href="~/web3/css/style.css" rel="stylesheet" type="text/css" media="all" />

        <!-- font-awesome-icons -->
        <link href="~/web3/css/font-awesome.css" rel="stylesheet">
        <!-- //font-awesome-icons -->
        <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800" rel="stylesheet">
    </head>

    <body>
        <!-- banner -->
        <div class="clearfix"></div>

        <div style="margin-left:20px; margin-top:75px">

            <ul class="ca-menu">
                <li>
                    <a href="#">
                        <i class="fa fa-book" aria-hidden="true"></i>
                        <div class="ca-content">
                            <h4 class="ca-main">We have @ViewBag.number_of_books book in our libraray.</h4>
                            <h3 class="ca-sub">Number of books</h3>
                        </div>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-users" aria-hidden="true"></i>
                        <div class="ca-content">
                            <h4 class="ca-main one">We have @ViewBag.number_of_member active member in our library.</h4>
                            <h3 class="ca-sub one">Number of member</h3>
                        </div>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-money" aria-hidden="true"></i>
                        <div class="ca-content">
                            <h4 class="ca-main two">$@ViewBag.total_money</h4>
                            <h3 class="ca-sub two">Total money</h3>
                        </div>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
                        <div class="ca-content">
                            <h4 class="ca-main three">@ViewBag.number_of_lend book is on lend right now.</h4>
                            <h3 class="ca-sub three">Books on lend</h3>
                        </div>
                    </a>
                </li>

            </ul>

            <ul class="ca-menu" >
                <li>
                    <a href="#">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        <div class="ca-content">
                            <h4 class="ca-main">@ViewBag.number_of_category different category.</h4>
                            <h3 class="ca-sub">Number of category</h3>
                        </div>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <div class="ca-content">
                            <h4 class="ca-main one">@ViewBag.most_active_member</h4>
                            <h3 class="ca-sub one">Most active member</h3>
                        </div>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-star" aria-hidden="true"></i>
                        <div class="ca-content">
                            <h4 class="ca-main two">@ViewBag.most_read_book</h4>
                            <h3 class="ca-sub two">Most read book</h3>
                        </div>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                        <div class="ca-content">
                            <h4 class="ca-main three">@ViewBag.most_book_author</h4>
                            <h3 class="ca-sub three">Author with most books</h3>
                        </div>
                    </a>
                </li>

            </ul>
        
        </div>
    </body>

</html>
